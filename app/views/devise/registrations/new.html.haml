.row
  .col-lg-4.offset-lg-4
    %h1.text-lg-center= link_to t("project.short_name"), root_path

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      = f.input :email, label: false, placeholder: true
      = f.input :password, autocomplete: "off", label: false, placeholder: true
      = f.input :password_confirmation, autocomplete: "off", label: false, placeholder: true
      .actions
        = f.submit "Sign up", class: "btn btn-primary btn-block"
    = render "devise/shared/links"
